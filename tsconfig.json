{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": false, 
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["server/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}
